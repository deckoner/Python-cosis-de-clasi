<?xml version="1.0"?>
<odoo>
    <record id="instituto_empresa_action" model="ir.actions.act_window">
        <field name="name">Empresas</field>
        <field name="res_model">instituto.empresa</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- LA PROPIEDAD EN VISTA DE ARBOL Y TAL ;-;-->
    <record id="instituto_empresa_action_view_tree" model="ir.ui.view">
        <field name="name">instituto.empresa.tree</field>
        <field name="model">instituto.empresa</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="telefono"/>
                <field name="cicloFormativo"/>
            </tree>
        </field>
    </record>

    <!-- LA VISTA PARA EL FORMULARIO -->
    <record id="instituto_empresa_action_view_form" model="ir.ui.view">
        <field name="name">instituto.empresa.form</field>
        <field name="model">instituto.empresa</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="direccion"/>
                            <field name="telefono"/>
                        </group>
                        <group>
                            <field name="cicloFormativo"/>
                        </group>
                        <separator/>
                        <h2>
                            Lista de alumnos
                        </h2>
                        <field name="alumnos"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <!-- LA BUSQUEDA Y FILTROS-->
    <record id="instituto_empresa_action_view_search" model="ir.ui.view">
        <field name="name">instituto.empresa.search</field>
        <field name="model">instituto.empresa</field>
        <field name="arch" type="xml">
            <search string="Busqueda Por">
                <field name="name"/>
                <field name="cicloFormativo"/>  
            </search>
        </field>
    </record>
</odoo>
